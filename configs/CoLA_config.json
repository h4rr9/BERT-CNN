{
  "exp":{
    "name": "conv_cola"
  },

  "data_loader":{
    "name": "CoLADataLoader"
  },

  "model":{
    "name": "CoLAModel",
    "optimizer": "nadam",
    "dropout_rate": 0.5,
    "activation": "elu"
  },

  "trainer":{
    "name": "CoLAModelTrainer",
    "num_epochs": 100,
    "verbose_training": 2,
    "batch_size": 64
  },

  "callbacks":{
    "checkpoint_monitor": "val_matt_corr",
    "checkpoint_mode": "max",
    "checkpoint_save_best_only": true,
   "checkpoint_save_weights_only": false,
    "checkpoint_verbose": true,
    "tensorboard_write_graph": true
  }
}
